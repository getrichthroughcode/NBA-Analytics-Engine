# NBA Analytics Engine - Environment Configuration
# =================================================
# Copy this file to .env and fill in your values

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nba_analytics
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Airflow Configuration
AIRFLOW_FERNET_KEY=your_fernet_key_here  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_SECRET_KEY=your_secret_key_here
AIRFLOW_USER=admin
AIRFLOW_PASSWORD=admin
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# NBA API
NBA_API_RATE_LIMIT=600  # Requests per minute

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application Settings
ENVIRONMENT=development  # development, staging, production
DEBUG=True

# Data Quality
DQ_CRITICAL_THRESHOLD=0.95  # 95% data quality required
DQ_WARNING_THRESHOLD=0.90

# ML Models
ML_MODEL_PATH=/models
ML_RETRAIN_FREQUENCY=weekly

# Monitoring & Alerts
ENABLE_MONITORING=True
ALERT_EMAIL=alerts@your-domain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Feature Flags
ENABLE_WEB_SCRAPING=False
ENABLE_REAL_TIME_DATA=False
ENABLE_ML_PREDICTIONS=True

# Performance
MAX_WORKERS=4
BATCH_SIZE=100
CACHE_TTL=3600  # seconds

# Backup & Recovery
BACKUP_ENABLED=True
BACKUP_SCHEDULE="0 3 * * *"  # Daily at 3 AM
BACKUP_RETENTION_DAYS=30

# Timezone
TIMEZONE=America/New_York  # EST for NBA games
