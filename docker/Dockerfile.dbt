FROM python:3.9-slim

WORKDIR /dbt

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    postgresql-client \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install dbt
RUN pip install --no-cache-dir \
    dbt-core==1.6.9 \
    dbt-postgres==1.6.9

# Copy dbt project
COPY dbt/ /dbt/

# Set up dbt profiles directory
RUN mkdir -p /root/.dbt

# Default command
CMD ["dbt", "debug"]
